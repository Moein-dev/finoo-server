# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=3000

# ===========================================
# DATABASE CONFIGURATION (PRODUCTION)
# ===========================================
DB_HOST=your-production-db-host
DB_USER=finoo_prod_user
DB_PASSWORD=your-very-secure-production-password
DB_NAME=finoo_production

# ===========================================
# JWT CONFIGURATION (PRODUCTION SECURITY)
# ===========================================
# Generate strong secret keys using:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SECRET_KEY=your-production-secret-key-64-characters-or-longer-here
REFRESH_SECRET_KEY=your-production-refresh-secret-key-64-characters-different

# JWT Token Expiry (Security Enhanced)
ACCESS_TOKEN_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=15d

# ===========================================
# SMS SERVICE CONFIGURATION (PRODUCTION)
# ===========================================
SMS_USERNAME=your_production_sms_username
SMS_PASSWORD=your_production_sms_password
SMS_API_URL=http://smspanel.Trez.ir/SendMessageWithCode.ashx

# ===========================================
# EMAIL CONFIGURATION (PRODUCTION)
# ===========================================
MAIL_USER=noreply@finoo.ir
MAIL_PASS=your-production-email-app-password
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587

# ===========================================
# EXTERNAL API CONFIGURATION (PRODUCTION)
# ===========================================
TGJU_API_URLS=https://call1.tgju.org/ajax.json,https://call2.tgju.org/ajax.json,https://call3.tgju.org/ajax.json

# ===========================================
# CORS CONFIGURATION (PRODUCTION)
# ===========================================
ALLOWED_ORIGINS=https://finoo.ir,https://www.finoo.ir,https://app.finoo.ir

# ===========================================
# RATE LIMITING CONFIGURATION (PRODUCTION SECURITY)
# ===========================================
# OTP Rate Limiting - 3 requests per 5 minutes
OTP_RATE_LIMIT_WINDOW_MS=300000
OTP_RATE_LIMIT_MAX=3

# Login Rate Limiting - 5 attempts per 15 minutes
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX=5

# General API Rate Limiting - 100 requests per hour
GENERAL_RATE_LIMIT_WINDOW_MS=3600000
GENERAL_RATE_LIMIT_MAX=100

# ===========================================
# OTP SECURITY CONFIGURATION (PRODUCTION)
# ===========================================
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=2
OTP_MAX_ATTEMPTS=3

# ===========================================
# FILE UPLOAD CONFIGURATION (PRODUCTION)
# ===========================================
UPLOAD_PATH=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,image/webp

# ===========================================
# LOGGING CONFIGURATION (PRODUCTION)
# ===========================================
LOG_LEVEL=warn
LOG_FILE=logs/production.log

# ===========================================
# REDIS CONFIGURATION (PRODUCTION - OPTIONAL)
# ===========================================
REDIS_URL=redis://your-redis-host:6379
REDIS_PASSWORD=your-redis-password

# ===========================================
# MONITORING CONFIGURATION (PRODUCTION)
# ===========================================
HEALTH_CHECK_INTERVAL=30000
ENABLE_METRICS=true
METRICS_PORT=9090

# ===========================================
# SECURITY MONITORING (PRODUCTION)
# ===========================================
ENABLE_SECURITY_LOGGING=true
SECURITY_LOG_FILE=logs/security.log
ALERT_EMAIL=security@finoo.ir
ALERT_WEBHOOK_URL=https://your-monitoring-service.com/webhook

# ===========================================
# SSL/TLS CONFIGURATION (PRODUCTION)
# ===========================================
SSL_CERT_PATH=/etc/ssl/certs/finoo.crt
SSL_KEY_PATH=/etc/ssl/private/finoo.key
FORCE_HTTPS=true

# ===========================================
# BACKUP CONFIGURATION (PRODUCTION)
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=finoo-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1